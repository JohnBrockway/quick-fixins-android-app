<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/recipe_ingredient_hint_text"
        android:textColorHint="@color/colorTextLight"
        android:theme="@style/EditTextTheme">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences"
            android:textColor="@color/colorText"
            android:theme="@style/EditTextTheme" />

    </android.support.design.widget.TextInputLayout>

    <ImageButton
        android:id="@+id/addButton"
        android:layout_width="@dimen/circular_button_size"
        android:layout_height="@dimen/circular_button_size"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/circular_button_margin"
        android:layout_marginTop="@dimen/circular_button_margin"
        android:layout_marginBottom="@dimen/circular_button_margin"
        android:layout_weight="0"
        android:background="@drawable/background_button_circular_primary"
        android:contentDescription="@string/plus_icon_desc"
        android:padding="@dimen/circular_button_padding"
        android:scaleType="fitCenter"
        android:tint="@color/white"
        app:srcCompat="@drawable/add" />

    <ImageButton
        android:id="@+id/removeButton"
        android:layout_width="@dimen/circular_button_size"
        android:layout_height="@dimen/circular_button_size"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/circular_button_margin"
        android:layout_marginTop="@dimen/circular_button_margin"
        android:layout_marginBottom="@dimen/circular_button_margin"
        android:layout_weight="0"
        android:background="@drawable/background_button_circular_accent"
        android:contentDescription="@string/minus_icon_desc"
        android:padding="@dimen/circular_button_padding"
        android:scaleType="fitCenter"
        android:tint="@color/white"
        app:srcCompat="@drawable/remove" />

</LinearLayout>
